{
  "author": "Mach 30",
  "bin": {
    "m30pm": "./bin/run.js"
  },
  "dependencies": {
    "@inquirer/confirm": "^3.0.0",
    "@inquirer/input": "^2.0.0",
    "@inquirer/select": "^2.0.0",
    "@oclif/core": "^3",
    "@oclif/plugin-help": "^6",
    "@types/inquirer": "^9.0.7",
    "inquirer": "^9.2.14",
    "m30pm-lib-common": "^0.0.2",
    "m30pm-lib-fs": "^0.0.0"
  },
  "description": "Mach 30 package manager for m30ml projects",
  "devDependencies": {
    "@oclif/prettier-config": "^0.2.1",
    "@oclif/test": "^3",
    "@types/chai": "^4",
    "@types/mocha": "^9.0.0",
    "@types/node": "^18",
    "chai": "^4",
    "eslint": "^8.56.0",
    "eslint-config-oclif": "^5",
    "eslint-config-oclif-typescript": "^3",
    "eslint-config-prettier": "^9.1.0",
    "mocha": "^10",
    "nyc": "^15.1.0",
    "oclif": "^4",
    "shx": "^0.3.3",
    "ts-node": "^10.9.2",
    "typescript": "^5"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "/bin",
    "/dist",
    "/oclif.manifest.json"
  ],
  "homepage": "https://github.com/Mach30/m30pm",
  "license": "Apache-2.0",
  "main": "dist/index.js",
  "name": "m30pm",
  "workspaces": [
    "./packages/*"
  ],
  "oclif": {
    "bin": "m30pm",
    "dirname": "m30pm",
    "commands": "./dist/commands",
    "plugins": [
      "@oclif/plugin-help"
    ],
    "topicSeparator": " ",
    "topics": {
      "project": {
        "description": "Create and manage m30ml projects"
      }
    }
  },
  "repository": "https://github.com/Mach30/m30pm",
  "scripts": {
    "build": "npm run build -w packages/m30pm-lib-common && npm run build -w packages/m30pm-lib-fs && shx rm -rf dist && tsc -b",
    "lint": "eslint . --ext .ts",
    "postpack": "shx rm -f oclif.manifest.json",
    "posttest": "npm run lint",
    "prepack": "npm run build && oclif manifest && oclif readme",
    "test": "nyc mocha --require ts-node/register --forbid-only \"test/**/*.test.ts\"",
    "version": "oclif readme && git add README.md"
  },
  "version": "0.0.0",
  "bugs": "https://github.com/Mach30/m30pm/issues",
  "keywords": [
    "oclif"
  ],
  "types": "dist/index.d.ts",
  "nyc": {
    "exclude": [
      "packages/**",
      "test/**"
    ]
  }
}
